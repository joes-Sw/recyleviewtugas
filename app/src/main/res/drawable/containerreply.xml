<!-- res/drawable/rectangle_with_top_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rectangle Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size
                android:width="100dp"
                android:height="50dp" />
        </shape>
    </item>
    <!-- Top Stroke -->
    <item android:top="0dp" android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#B5B5B5" /> <!-- Stroke color -->
            <size android:height="2dp" /> <!-- Stroke thickness -->
        </shape>
    </item>
</layer-list>
